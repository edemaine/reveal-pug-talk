// Formatting tools specific to this presentation
cite
  color: #c0a5c0
table.side-by-side
  table-layout: fixed
  td
    width: 50%
table.compact
  td, th
    padding: 0 0.5em

.invert
  filter: invert(1) hue-rotate(180deg)
.url
  display: block
  font-size: 30%
  font-family: monospace
.sep
  color: #9a5b9a
